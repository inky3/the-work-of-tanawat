---
import Layout from "../components/Layout.astro";

/** DATA — replace with your real YouTube IDs later */
const hero = {
  title: "3D Animation & Motion",
  subtitle: "",
  blurb:
    "งาน animation ส่วนใหญ่มักเป็นงานรูปแบบฝึกเพื่อส่งอาจารย์ตอนเรียนอยู่ปี 3 แต่ก็มีงานบางส่วนที่ทำขึ้นมาเพื่อโชว์ใน portfolio ด้วยเช่นกัน",
};

const tags = [];

/** Use YouTube video IDs (the part after https://youtu.be/ or v=) */
const videos = [
  { title: "Awakening Sequence", youtubeId: "tYlpS28H2ao", tag: "Logo", caption: "Glyph reveal with chromatic bloom and energy trails." },
  { title: "Monolith Flyby",     youtubeId: "tYlpS28H2ao", tag: "FX",   caption: "Depth fog, parallax camera, emissive core pulses." },
  { title: "Tesseract Pulse",    youtubeId: "tYlpS28H2ao", tag: "Compositing", caption: "Grid displacement, grain, soft OSL glow pass." },
  { title: "Sigil Lockup",       youtubeId: "tYlpS28H2ao", tag: "Logo", caption: "Identity reveal with timing accents and echo trails." },
  { title: "Circuit Surge",      youtubeId: "tYlpS28H2ao", tag: "FX",   caption: "Energy path animation and emissive flicker cadence." },
  { title: "Reactor Ring",       youtubeId: "tYlpS28H2ao", tag: "Compositing", caption: "Layered glows, grain, defocus, vignette mix." },
];

/** Build a clean, privacy-enhanced embed URL with minimal branding */
const yt = (id: string) =>
  `https://www.youtube-nocookie.com/embed/${id}?rel=0&modestbranding=1&showinfo=0&controls=1`;
---

<style>
  /* ===== HERO (strip style) ===== */
  .hero-grid { display:grid; grid-template-columns: 1.1fr 1fr; gap:2rem; align-items:center; }
  @media (max-width: 992px){ .hero-grid { grid-template-columns: 1fr; } }
  .hero-art { position:relative; border-radius:16px; overflow:hidden; }
  .hero-art img { width:100%; height:100%; object-fit:cover; display:block; }

  /* Tags */
  .chip { display:inline-block; padding:.4rem .8rem; border-radius:999px;
    border:1px solid rgba(12,229,134,.30); color:var(--text); margin:.25rem .35rem .25rem 0;
  }
  .chip.is-active { background: rgba(12,229,134,.18); border-color: rgba(12,229,134,.55); }

  /* Section band (same translucent feel as abilities/highlights) */
  .band { background: linear-gradient(180deg, rgba(255,255,255,.04), rgba(255,255,255,0)); border-radius:16px; }

  /* Video cards (Necron dark panel) */
  .card-necron-dark {
    background: rgba(16,18,20,.86);
    border:1px solid rgba(12,229,134,.18);
    border-radius:14px; overflow:hidden;
    transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
  }
  .card-necron-dark:hover {
    transform: translateY(-3px);
    border-color: rgba(12,229,134,.38);
    box-shadow: 0 0 24px rgba(12,229,134,.18);
  }

  /* Responsive iframe container (16:9) */
  .video-wrap { position:relative; width:100%; aspect-ratio:16/9; background:#0a0d0e; }
  .video-wrap iframe { position:absolute; inset:0; width:100%; height:100%; border:0; }

  .body { padding:1rem 1.1rem 1.25rem; }
  .tag { font-size:.78rem; letter-spacing:.06em; text-transform:uppercase; color:#3dffae; }

  /* CTA block */
  .cta-wrap { display:flex; flex-wrap:wrap; gap:.75rem; align-items:center; }
</style>

<Layout title={`Tanawat // ${hero.title}`} description={hero.subtitle}>
  <!-- ===== HERO ===== -->
  <section class="panel p-4 p-lg-5 mb-5">
    <div class="hero-grid">
      <div class="hero-art">
        <img src="../img/blank.jpg" alt="Motion hero placeholder" loading="lazy" />
      </div>
      <div>
        <h2 class="text-muted m-0">{hero.subtitle}</h2>
        <h1 class="necron-glow m-0">{hero.title}</h1>
        <p class="mt-3 mb-4">{hero.blurb}</p>
        <div aria-label="Tags">
          {tags.map((t, i) => (
            <span class={`chip ${i === 0 ? "is-active" : ""}`}>{t}</span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- ===== VIDEO GALLERY (YouTube embeds) ===== -->
  <section class="band panel p-4 p-lg-5 mb-5">
    <div class="row g-3 g-lg-4">
      {videos.map((v) => (
        <div class="col-12 col-md-6">
          <div class="card-necron-dark">
            <div class="video-wrap">
              <iframe
                src={yt(v.youtubeId)}
                title={v.title}
                loading="lazy"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                allowfullscreen
              ></iframe>
            </div>
            <div class="body">
              <h5 class="mb-1">{v.title}</h5>
              <div class="tag mb-2">{v.tag}</div>
              <p class="text-muted mb-0">{v.caption}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- ===== OPTIONAL CTA ===== -->
  <!-- <section class="panel p-4 p-lg-5">
    <div class="band p-4" style="border-radius:12px;">
      <h3 class="mb-2">Need the full reel?</h3>
      <p class="text-muted mb-3">Watch the complete showcase on my YouTube channel or reach out for project-specific cuts.</p>
      <div class="cta-wrap">
        <a class="btn btn-necron" href="https://www.youtube.com/@yourchannel" target="_blank" rel="noopener">View Channel</a>
        <a class="btn btn-outline-light" style="border-color: rgba(12,229,134,.35)" href="mailto:ink@example.com">Contact Me</a>
      </div>
    </div>
  </section> -->
</Layout>
