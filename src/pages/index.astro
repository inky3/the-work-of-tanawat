<style>
  /* Page-local cosmetics to mimic your reference layouts without touching global tokens */
  .hero-wrap { display:grid; grid-template-columns: 1.2fr 1fr; gap: 2rem; }
  @media (max-width: 992px){ .hero-wrap { grid-template-columns: 1fr; } }

  .img-stack { position: relative; border-radius: 16px; overflow: hidden; }
  .img-stack img { width: 100%; height: 100%; object-fit: cover; display:block; }

  /* Layered emerald panels (Layout 2 vibe) */
  .bar { position:absolute; top:0; bottom:0; width: 14%;
    background: linear-gradient(180deg, rgba(12,229,134,.32), rgba(12,229,134,.08));
    border-left:1px solid rgba(12,229,134,.25); border-right:1px solid rgba(12,229,134,.12);
  }
  .bar.b1 { left: 8%; } .bar.b2 { left: 24%; } .bar.b3 { left: 40%; }

  /* Layout 5 ‚Äì abilities: top split band / icon discs */
  .abilities-band { background: linear-gradient(180deg, rgba(255,255,255,.04), rgba(255,255,255,0)); border-radius: 16px; }
  .ability { background: rgba(16,18,20,.86); border:1px solid rgba(12,229,134,.18); border-radius: 14px; padding: 1.2rem; height:100%; transition: transform .18s ease, box-shadow .18s ease; }
  .ability:hover { transform: translateY(-3px); box-shadow: 0 0 22px rgba(12,229,134,.18); }
  .icon-disc { width:56px; height:56px; border-radius:50%; display:grid; place-items:center; background:rgba(12,229,134,.14); border:1px solid rgba(12,229,134,.35); margin-bottom:.75rem; font-size:1.25rem; }

  /* Highlights (3-card showcase) */
  .highlight-card{
    background:#fff; color:#0a0d0e; border-radius:14px; overflow:hidden;
    border:1px solid rgba(12,229,134,.22);
    transition: transform .18s ease, box-shadow .18s ease, border-color .18s ease;
    display:block; text-decoration:none;
  }
  .highlight-card:hover{
    transform: translateY(-4px);
    box-shadow: 0 0 26px rgba(12,229,134,.18);
    border-color: rgba(12,229,134,.48);
  }
  .highlight-media{ width:100%; aspect-ratio: 1 / 1; object-fit: cover; display:block; }
  .highlight-body{ padding: 1rem 1.25rem 1.25rem; }
  .role { letter-spacing:.08em; font-weight:700; color:#0b8f62; text-transform:uppercase; font-size:.8rem; }
  .lable {color: #0b8f62;}
  .highlight { background: rgba(16,18,20,.86); border:1px solid rgba(12,229,134,.18); border-radius: 14px;}
</style>

